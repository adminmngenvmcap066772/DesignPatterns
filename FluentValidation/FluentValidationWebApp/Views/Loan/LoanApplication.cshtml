@model FluentValidationWebApp.Models.LoanApplicationModel

@{
    ViewData["Title"] = "Loan Application";
}

<h2>Loan Application</h2>

<form asp-action="LoanApplication" method="post">
    <div class="mb-3">
        <label asp-for="ApplicantName" class="form-label"></label>
        <input asp-for="ApplicantName" class="form-control" />
        <span asp-validation-for="ApplicantName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Amount" class="form-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TermMonths" class="form-label"></label>
        <input asp-for="TermMonths" class="form-control" />
        <span asp-validation-for="TermMonths" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="InterestRate" class="form-label"></label>
        <input asp-for="InterestRate" class="form-control" />
        <span asp-validation-for="InterestRate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
